.small-text-scroll[orient=vertical]
	transform matrix3d(0,-1,0.00,0,1.00,0,0.00,0,0,0,1,0,-140,160,0,1)
	-webkit-transform matrix3d(0,-1,0.00,0,1.00,0,0.00,0,0,0,1,0,-140,160,0,1)

.small-text-scroll
	-webkit-appearance none
	width 300px
	position relative
	z-index 20
	height 0

	@media (max-width $screen-device-small-max)
		display none
		margin 0

.small-text-scroll:focus
	outline none

.small-text-scroll::-webkit-slider-runnable-track
	width 300px
	height 0px
	box-shadow 1px 1px 1px #000000, 0px 0px 1px #000
	background rgba(0,0,0,0)
	border-radius 0px
	border 0px solid #010101

.small-text-scroll::-webkit-slider-thumb
	height 10px 
	width 10px
	border-radius 5px
	cursor pointer
	background transparent
	-webkit-appearance none

.small-text-scroll:focus::-webkit-slider-runnable-track
	background rgba(0,0,0,0)

.small-text-scroll::-moz-range-track
	width 300px
	height 0px
	box-shadow 1px 1px 1px #000000, 0px 0px 1px #000
	background rgba(0,0,0,0)
	border-radius 0px
	border 0px solid #000

/* MOZILLA */
.small-text-scroll::-moz-range-thumb
	height 10px
	width 10px
	cursor pointer
	border-radius 50px
	visibility hidden

.small-text-scroll::-ms-track
	width 300px
	height 0px
	background transparent
	border-color transparent
	color transparent

.small-text-scroll::-ms-fill-lower
	background rgba(0,0,0,0)
	border 0px solid #010101
	border-radius 0px
	box-shadow 1px 1px 1px #000000, 0px 0px 1px #000

.small-text-scroll::-ms-fill-upper
	background rgba(0,0,0,0)
	border 0px solid #010101
	border-radius 0px
	box-shadow 1px 1px 1px #000000, 0px 0px 1px #000

.small-text-scroll::-ms-thumb
	box-shadow 1px 1px 1px #000000, 0px 0px 1px #000
	border 5.5px solid #000000
	height 16px
	width 16px
	cursor pointer
	border-radius 50px
	background #000000
	height 0px

.small-text-scroll:focus::-ms-fill-lower
	background rgba(0,0,0,0)

.small-text-scroll:focus::-ms-fill-upper
	background rgba(0,0,0,0)

